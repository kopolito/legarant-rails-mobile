<!DOCTYPE html>
<html>
  <head>
    <title>RailsMobile</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">
    
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="navbar-header">
        <a class="navbar-brand" href="/"><%= image_tag 'logo.png' %></a>
      </div>
      <ul class="nav nav-tabs">
        <% if current_user %>
          <li class="nav-item">
            <a class="nav-link <% if current_page?('/welcome') %>active<% end %>" href="/welcome">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <% if current_page?(user_path(current_user)) %>active<% end %>" href="/users/<%= current_user.id %>">My Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <% if current_page?(:controller => 'contracts', :action => 'index') %>active<% end %>" href="/contracts">My contracts</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <% if current_page?(:controller => 'products', :action => 'index') %>active<% end %>" href="/products">The products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Sign Out</a>
          </li>
        <% else %>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/new">Sign Up</a>
          </li>
        <% end %>
      </ul>
    </nav>

    <% if current_user %>
        <p><br />Logged as <%= current_user.email %>&nbsp;&nbsp;</p>
        <% end %>
    

      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    </head>
    <div class="container" style="padding-top: 50px;">
      <%= yield %>
    </div>
  </body>
</html>
