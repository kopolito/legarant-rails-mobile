<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Family</th>
      <th>Productcode</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.family %></td>
        <td><%= product.productcode %></td>
        <td><%= link_to 'Show', product, {class: "btn btn-info"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
